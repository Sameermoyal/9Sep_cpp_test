#include<bits/stdc++.h>
using namespace std;
struct Apartment {
    
    int number;
    string name;
    int rent[12];
    int totalRent(){
        int k=0;
        for(int i=0;i<12;i++){
            k+=rent[i];
        }
        return k;
    }
};


int main(){
    int n;
    
    cin>>n;
    
    Apartment obj[n];
    for(int i =0;i<n;i++){
        cout<<"apartment number"<<endl;
        cin>>obj[i].number;
        cout<<"enter apart. name"<<endl;
        cin>>obj[i].name;
        cout<<"enter rent"<<endl;
        for(int j=0;j<12;j++){
            cin>>obj[i].rent[j];
        }
    }
    
    int maxi=0;
    string name;
    
    for (int i = 0; i <n; i++) {
        if(maxi<obj[i].totalRent()){
            maxi=obj[i].totalRent();
            name=obj[i].name;
        }
    }
    
    cout<<name;
    
    return 0;
}